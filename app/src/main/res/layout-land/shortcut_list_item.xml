<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shorcut_item_landscape"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:paddingBottom="6dp"
    android:paddingStart="6dp"
    android:paddingEnd="6dp"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingTop="6dp"
    android:background="@drawable/shortcut_item_divider"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/shortcut_item_lock_image"
        style="@style/homeScreenIcons"
        android:layout_width="13dp"
        android:layout_height="18dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="5dp"
        android:src="@drawable/menu_lock_icon"
        android:contentDescription="@null"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/shortcut_item_image"
        style="@style/homeScreenIcons"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/shortcut_item_label"
        style="@style/homeScreenShortcutText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/shortcut_item_image"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:textSize="@dimen/text_size_large"/>

    <TextView
        android:id="@+id/shortcut_item_right_text"
        tools:text="4"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="13dp"
        android:background="@drawable/menu_badge_nine_patch"
        android:paddingEnd="4dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingStart="4dp"
        android:paddingTop="0dp"
        android:paddingBottom="3dp"
        android:textAlignment="center"
        android:contentDescription="@null"
        android:textSize="14sp"
        android:textColor="#ff333333"
        tools:visibility="visible"
        android:visibility="gone" />

</RelativeLayout>
