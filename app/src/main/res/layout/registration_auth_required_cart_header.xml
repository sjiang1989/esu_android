<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/status_important_text_color"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="5dp"
    android:paddingEnd="5dp"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    android:id="@+id/registration_header_container">

    <TextView
        android:id="@+id/list_header_title"
        tools:text="Winter 2015 201210"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/approvalRequiredHeaderLeftText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/imageView"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <ImageView
        android:layout_height="wrap_content"
        android:src="@drawable/icon_warning_black"
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:contentDescription="@string/content_desc_warning"
        android:cropToPadding="false"
        android:adjustViewBounds="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>
