<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:ignore="Overdraw" >
	
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >
	    
	    <!-- IMPORTANT MESSAGES -->
	    <LinearLayout
	        android:id="@+id/general_layout"
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:orientation="vertical">
	        
	        <TextView 
		        android:id="@+id/general_header"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:paddingTop="8dp"
		        android:paddingLeft="8dp"
		        android:paddingRight="8dp"
		        android:paddingBottom="0dp"
		        android:text="@string/registration_results_important"
		        android:textAppearance="@android:style/TextAppearance.Large"
		        android:textStyle="bold"
		        android:textColor="@color/status_important_text_color"
				android:drawableStart="@drawable/ic_status_important"
				android:drawablePadding="8dp"
		        />
	        <TextView
	            android:id="@+id/general_sub_header"
	            android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:text="@string/registration_results_important_sub"
				android:paddingStart="46dp"
	            android:paddingBottom="4dp"
	            android:background="@drawable/bottom_line_1dp"
				tools:ignore="RtlSymmetry" />
	        
	    </LinearLayout>
	    
	    <!-- SUCCESS MESSAGES -->
	    <LinearLayout
	        android:id="@+id/success_layout"
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:orientation="vertical">
	        
	        <TextView 
		        android:id="@+id/success_header"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:paddingTop="8dp"
		        android:paddingLeft="8dp"
		        android:paddingRight="8dp"
		        android:paddingBottom="0dp"
		        android:text="@string/registration_results_registered"
		        android:textAppearance="@android:style/TextAppearance.Large"
		        android:textStyle="bold"
		        android:textColor="@color/status_success_text_color"
		        android:drawableStart="@drawable/ic_status_success"
				android:drawablePadding="8dp" />
	        
	        <TextView
	            android:id="@+id/success_sub_header"
	            android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:text="@string/registration_results_success_sub"
				android:paddingStart="46dp"
	            android:paddingBottom="4dp"
	            android:background="@drawable/bottom_line_1dp"
				tools:ignore="RtlSymmetry" />
	        
	        
	    </LinearLayout>
	    
	    <!-- FAILURES/ERROR MESSAGES -->
	    <LinearLayout
	        android:id="@+id/failure_layout"
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:orientation="vertical">
	        
	        <TextView 
		        android:id="@+id/failure_header"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:paddingTop="8dp"
		        android:paddingLeft="8dp"
		        android:paddingRight="8dp"
		        android:paddingBottom="0dp"
		        android:text="@string/registration_results_warning"
		        android:textAppearance="@android:style/TextAppearance.Large"
		        android:textStyle="bold"
		        android:textColor="@color/status_error_text_color"
		        android:drawableStart="@drawable/ic_status_error"
				android:drawablePadding="8dp"
		         />
	        
	        <TextView
	            android:id="@+id/failure_sub_header"
	            android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:text="@string/registration_results_failure_sub"
				android:paddingStart="46dp"
	            android:paddingBottom="4dp"
	            android:background="@drawable/bottom_line_1dp"
				tools:ignore="RtlSymmetry" />
	        
	    </LinearLayout>       
	
	</LinearLayout>
</ScrollView>
